@using BOE.Models
@model LoginViewModel

@{
    Layout = null;
}


<div class="hold-transition login-page">
    <form name="LoginForm" id="form">
        <div class="login-box" ng-controller="logInController">
            <div class="login-logo">
                <a href="../../index2.html"><b>B</b>ackoffice<b>Extended</b></a>
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Sign in to start your session</p>
                <div id="divShowError" ng-show="divShowError">
                    <font face=" verdana" color="red" id="errorMessage" style="padding-left:5%">Incorrect User Name or Password.</font>
                </div>
                <div>
                    <center>
                        <input ng-if="errorMess" style="border:none;border:initial;font:verdana;color:red;text-align: center" type="text" class="form-control input-sm" ng-model="logIn.Error" />
                    </center>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control input-sm" ng-model="logIn.UserName" required placeholder="User Name" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="btnSubmit" class="form-control input-sm" ng-model="logIn.Password" required placeholder="Password" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        @*<div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>*@
                    </div>
                    <!-- /.col -->
                    <div class="col-md-4">
                        <button type="submit" style="padding-right:5px" type="button" value="Log in" class="btn btn-primary btn-block btn-flat" basic-click="LogIn()" capture-keypress>Log in</button>
                    </div>
                    <!-- /.col -->
                </div>
                @*<a href="#">I forgot my password</a><br>
                <a href="register.html" class="text-center">Register a new membership</a>*@
            </div>
            <!-- /.login-box-body -->
        </div>
    </form>
    @*Footer Panel*@
    @*Start*@
    <footer>
        <center>
            <strong style=" color:red;padding:0">Copyright &copy; @DateTime.Now.Year @* .*@</strong>
            @*<strong style="color:Red;padding:0"> </strong>*@
        </center>
    </footer>
    @*End*@
</div>



