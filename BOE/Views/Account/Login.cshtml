    <link rel="stylesheet" href="~/Plugins/iCheck/square/blue.css">

    <!-- jQuery 3.0.0 -->
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script type="text/javascript" src="~/Plugins/iCheck/icheck.min.js"></script>*@
</head>


<body class="hold-transition login-page">
    <form name="LoginForm">
        <div class="login-box" ng-controller="logInController">
            <div class="container body-content row">
                <div class="login-box">
                    <div class="login-logo">
                        <a href="../../index2.html"><b>B</b>ackoffice<b>Extended</b></a>
                    </div>
                    <div class="login-box-body">
                        <p class="login-box-msg">Welcome To Log in Page</p>
                        <section id="loginForm" class="login-box">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div id="divShowError">
                                @*<font face="verdana" color="red">@Html.ValidationMessage("LOGIN_ERROR")</font>*@
                                <font face="verdana" color="red">@ViewBag.Error</font>
                            </div>
                            <div class="form-group has-feedback">
                                <div class="col-md-11">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                    <font face="verdana" color="red">@ViewBag.UserNameError</font>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <div class="col-md-11">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                    <font face="verdana" color="red">@ViewBag.PasswordError</font>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                            <div class="col-md-11">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="col-md-11">
                                    <input type="submit" value="Log in" class="btn btn-primary btn-block btn-flat" ng-click="LogIn()" />
                                </div>
                            </div>
                            }
                        </section>
                    </div>
                </div>
            </div>

        </div>
    </form>
</body>
</html>

