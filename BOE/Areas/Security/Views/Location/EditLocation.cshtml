
@{
    Layout = null;
}


<link href="~/Content/developerCSS/developerCSS.css" rel="stylesheet" />


<div ng-controller="locationController" class="col-md-12">
    <section class="content-header padding-top-5">
        <h1>
            Branch
            <small> Branch Related Data </small>
        </h1>
        <ol class="breadcrumb ">
            <li><a href="#"><i class="fa fa-dashboard"></i>Basic Entry</a></li>
            <li class="active">Branch </li>
        </ol>
    </section>
    <section class="content padding-top-5">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit Branch</h3>
                    </div>
                    <form name="UpdateLocationForm" ng-init="LoadDropdownsAndLocation()">
                        <input ng-model="editLocation.ID" style="display:none" />
                        <div class="box-body">
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Branch Code</label>
                                    <input type="text" class="form-control" ng-maxlength="10" ng-model="editLocation.Code" placeholder="Max. 10 Characters" required />
                                </div>
                                <div class="form-group">
                                    <label>Branch Name</label>
                                    <input type="text" class="form-control" ng-maxlength="50" ng-model="editLocation.Name" placeholder="Max. 50 Characters" required />
                                </div>
                                <div class="form-group">
                                    <label>Mobile No</label>
                                    <input type="text" class="form-control" ng-model="editLocation.MobileNo" placeholder=" Ex. 8801717123456" />
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control" ng-maxlength="300" rows="4" ng-model="editLocation.Address" placeholder="Max. 300 Characters"></textarea>
                                </div>
                                <div class="form-group padding-top-15">
                                    <label>Phone No</label>
                                    <input type="text" class="form-control" ng-maxlength="50" ng-model="editLocation.PhoneNo" placeholder=" Ex. 880298739383" />
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" ng-maxlength="100" ng-model="editLocation.Email" placeholder="Max. 100 Characters" />
                                </div>
                                <div class="form-group">
                                    <label>Fax No</label>
                                    <input type="text" class="form-control" ng-model="editLocation.FaxNo" placeholder="Ex. 880298739383" />
                                </div>
                                <div class="form-group">
                                    <label>Parent Branch</label>
                                    <select class="form-control" data-ng-model="editLocation.ParentLocationId"
                                            ng-options="Location.ParentLocationId as Location.Name for Location in LocationList">
                                        <option value=""> Select parent Branch </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" value="Save" data-ng-click="UpdateLocation()" class="btn btn-success button-size-small glyphicon"><span class="glyphicon glyphicon-floppy-disk"></span>Save</button>
                            <a href="/#/Locations" type="button" class="btn btn-warning button-size-small"><span class="glyphicon glyphicon-hand-left"></span>Back</a>
                        </div>
                    </form>
                </div>
            </div>


