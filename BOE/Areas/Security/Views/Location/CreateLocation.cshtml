@{
    Layout = null;
}



<div ng-controller="locationController" class="col-md-12">
    <section class="content-header padding-top-5">
        <h1>
            Branch
            <small> Branch Related Data </small>
        </h1>
        <ol class="breadcrumb ">
            <li><a href="#"><i class="fa fa-dashboard"></i>Basic Entry</a></li>
            <li class="active">Branch </li>
        </ol>
    </section>
    <section class="content padding-top-5" >
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Create Branch</h3>
                    </div>
                    <form name="CreateLocationForm" ng-init="LoadDropdowns()">
                        <div class="box-body">
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Branch Code</label>
                                    <input type="text" class="form-control" ng-maxlength="10" ng-model="location.Code" placeholder="Max. 10 Characters" required />
                                </div>
                                <div class="form-group">
                                    <label>Branch Name</label>
                                    <input type="text" class="form-control" ng-maxlength="50" ng-model="location.Name" placeholder="Max. 50 Characters" required />
                                </div>
                                <div class="form-group">
                                    <label>Mobile No</label>
                                    <input type="number" class="form-control" ng-model="location.MobileNo"
                                           onkeypress='return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 46 || event.keyCode == 8 || event.keyCode == 46)'
                                           placeholder=" Ex. 8801717123456" />
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control" ng-maxlength="300" rows="4" ng-model="location.Address" placeholder="Max. 300 Characters"></textarea>
                                </div>
                                <div class="form-group padding-top-15">
                                    <label>Phone No</label>
                                    <input type="text" class="form-control" ng-maxlength="50" ng-model="location.PhoneNo"
                                           onkeypress='return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 46 || event.keyCode == 8 || event.keyCode == 46)'
                                           placeholder=" Ex. 880298739383" />
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" ng-maxlength="100" ng-model="location.Email" placeholder="Max. 100 Characters" />
                                </div>
                                <div class="form-group">
                                    <label>Fax No</label>
                                    <input type="text" class="form-control" ng-model="location.FaxNo"
                                           onkeypress='return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 46 || event.keyCode == 8 || event.keyCode == 46)'
                                           placeholder="Ex. 880298739383" />
                                </div>
                                <div class="form-group">
                                    <label>Parent Branch</label>
                                    <select class="form-control" data-ng-model="location.ParentLocationId"
                                            ng-options="Location.ParentLocationId as Location.Name for Location in LocationList">
                                        <option value=""> Select Parent Branch </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" value="Save" data-ng-click="CreateLocation()" class="btn btn-success button-size-small glyphicon"><span class="glyphicon glyphicon-floppy-disk"></span>Save</button>
                            <button value="Clear" ng-click="Reload()" class="btn btn-primary button-size-small"><span class="glyphicon glyphicon-repeat"></span>Clear</button>
                            @*<a href="" ng-click="Reload()" type="button" class="btn btn-primary button-size-small"><span class="glyphicon glyphicon-repeat"></span>Clear</a>*@
                            <a href="/#/Locations" type="button" class="btn btn-warning button-size-small"><span class="glyphicon glyphicon-hand-left"></span>Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>




                                                                                                               
