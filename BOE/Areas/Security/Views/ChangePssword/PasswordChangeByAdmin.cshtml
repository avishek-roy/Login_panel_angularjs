
@{
    Layout = null;
}



<div ng-controller="changePasswordController" class="col-md-12">
    <section class="content-header padding-top-5">
        <h1>
            Change Password
            <small> Change Password By Admin</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Administration</a></li>
            <li class="active">Change Password By Admin</li>
        </ol>
    </section>
    <section class="content padding-top-5">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Change Password By Admin</h3>
                    </div>
                    <form name="AdminChangePasswordForm">
                        <div class="box-body" style="padding-bottom:0px;">
                            <div class="col-md-4">
                                <div class="form-group">
                                        <label>
                                            User Full Name
                                        </label>
                                        <input type="text" style="padding-top:5px;" class="form-control custome-textbox" ng-model="changePassword.FullName" placeholder="Full Name here" ng-keydown="checkKeyDown($event)" ng-keyup="checkKeyUp($event)" ng-change="searchFullName()" />
                                        <ul class="suggestions-list">
                                            <li ng-repeat="suggestion in suggestions track by $index" ng-class="(active : selectedIndex === $index)" ng-click="AssignValueAndHide($index)">{{suggestion}}</li>
                                        </ul>
                                    </div>
                                </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                        <label>
                                            User Name
                                        </label>
                                        <input type="text" class="form-control input-sm custome-textbox" ng-model="changePassword.UserName" placeholder="User Name" ng-keydown="checkKeyDown1($event)" ng-keyup="checkKeyUp1($event)" ng-change="searchUserName()" />
                                        <ul class="suggestions-list">
                                            <li ng-repeat="suggestion1 in suggestions1 track by $index" ng-class="(active : selectedIndex1 === $index)" ng-click="AssignValueAndHide1($index)">{{suggestion1}}</li>
                                        </ul>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                        <label>
                                            New Password
                                        </label>
                                        <input type="password" class="form-control input-sm custome-textbox" ng-model="changePassword.NewPassword" ng-minlength="6" required placeholder="Min. 6 Character" />
                                    </div>
                                </div>

                            </div>

                        <div class="box-footer">
                            <button type="submit" ng-click="ChangePasswordByAdmin()" class="btn btn-success button-size-small glyphicon"><span class="glyphicon glyphicon-floppy-disk"></span>Save</button>
                            <button value="Clear" ng-click="Reload()" class="btn btn-primary button-size-small"><span class="glyphicon glyphicon-repeat"></span>Clear</button>
                            <a href="/#/" type="button" class="btn btn-warning button-size-small"><span class="glyphicon glyphicon-hand-left"></span>Back</a>
                        </div>
                    </form>
                    <strong>* Select User Name or User Full Name from both</strong>
                </div>
            </div>
         </div>
     </section>
