@{
    Layout = null;
}

<style>
    .glyphicon {
        float: right;
    }

    table.dataTable thead .sorting_asc {
        background-image: none;
    }

    table.dataTable thead .sorting_desc {
        background-image: none;
    }

    table.dataTable thead .sorting {
        background-image: none;
    }
</style>


<div ng-controller="userGroupController" class="container col-md-12">
    <section class="content-header  padding-top-5">
        <h1>
            User Group
            <small>Administration Related Data</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Administration</a></li>
            <li class="active">User Group</li>
        </ol>
    </section>

    <section class="content padding-top-5">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">List of Branch</h3>
                    </div>
                    <div class="box-body" style="padding-bottom:0px;">
                        <div>
                            <a href="/#/CreateUserGroup" class="btn btn-success button-size-small"><span class="glyphicon glyphicon-plus"></span> Add New</a>
                        </div>
                        <div ng-if="isTableShown" class="col-md-12 no-padding">
                            <table id="entry-grid" datatable="" dt-options="dtOptions" dt-columns="dtColumns" class="table table-striped table-bordered table-hover no-footer" style="width:100%">
                                <thead>
                                    <tr>
                                        <th ng-click="sortData(0,0)">
                                            User Group Name
                                            <div ng-class="getSortClass(0,0)"></div>
                                        </th>
                                        <th>
                                            Is Admin
                                        </th>
                                        <th>
                                            Edit/Delete
                                        </th>
                                    </tr>

                                </thead>
                                <tfoot>
                                    <tr>
                                        <th ng-click="sortData(0,1)">
                                            User Group Name
                                            <div ng-class="getSortClass(0,1)"></div>
                                        </th>
                                        <th>
                                            Is Admin
                                        </th>
                                        <th>
                                            Edit/Delete
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
       </div>
    </section>
</div>