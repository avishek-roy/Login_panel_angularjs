
@{
    Layout = null;
}

<link href="~/Content/developerCSS/developerCSS.css" rel="stylesheet" />


<div ng-controller="SurveyController" class="col-md-12">
    <section class="content-header padding-top-5">
        <h1>
            Client Survey
            <small>Client Survey Related Data</small>
        </h1>
        <ol class="breadcrumb ">
            <li><a href="#"><i class="fa fa-dashboard"></i>Client Survey</a></li>
            <li class="active">Client Survey Entry</li>
        </ol>
    </section>
    <section class="content padding-top-5">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit Client Survey</h3>
                    </div>
                    <form name="SurveyEditForm" ng-init="LoadDropdownsAndLocation()">
                        <div class="box-body" style="padding-bottom:0px;">
                            <input type="hidden" ng-model="survey.ID" />
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Code</label>
                                    <input type="text" class="form-control" ng-maxlength=" 30" ng-model="survey.Code" placeholder="Code" required />
                                </div>
                                <div class="form-group">
                                    <label>Contact Person</label>
                                    <input type="text" class="form-control" ng-maxlength="99" ng-model="survey.ContactPerson" placeholder="Contact Person" required />
                                </div>
                                <div class="form-group">
                                    <label>Survey Date</label>
                                    <div class="input-group" moment-picker="survey.CommunicationDate" format="DD-MM-YYYY">
                                        <input type="text" class="form-control" placeholder="Select a date (Ex. DD-MM-YYYY)"
                                               ng-model="survey.CommunicationDate"
                                               onkeypress='return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 46 || event.keyCode == 8 || event.keyCode == 46)'
                                               ng-model-options="{ updateOn: 'blur' }">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                    @*<input type="date" class="form-control datepicker datemask" style="height: 33px;" placeholder="dd/mm/yyyy" ng-model="survey.CommunicationDate" required />*@
                                </div>
                                <div class="form-group">
                                    <label>Contact No</label>
                                    <input type="text" class="form-control" onkeypress='return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 46 || event.keyCode == 8 || event.keyCode == 46)' ng-model="survey.ContactNo" placeholder="Ex. 8801717123456" />
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" ng-model="survey.Email" placeholder="Ex. mail@ail-bd.com" />
                                </div>

                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control" rows="4" ng-model="survey.Address" placeholder="Max. 300 Characters" />
                                </div>
                                <div class="form-group padding-top-10">
                                    <label> Comnucation Type</label>
                                    <select style="height: 33px;" data-ng-model="survey.ComnucationType" required class="dropdown form-control"
                                            ng-options="Type.Text as Type.Value for Type in ComnucationTypeList">
                                        <option value=""> -- Please Select Here -- </option>
                                    </select>
                                </div>

                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label>Feed Back</label>
                                    <textarea class="form-control" ng-model="survey.FeedBack" rows="3" placeholder="Max. 300 Characters" />
                                </div>
                                <div class="form-group">
                                    <label>Follow Up Date</label>
                                    <div class="input-group" moment-picker="survey.FollowUpDate" format="DD-MM-YYYY">
                                        <input type="text" class="form-control" placeholder="Select a date (Ex. DD-MM-YYYY)"
                                               ng-model="survey.FollowUpDate"
                                               onkeypress='return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 8 || event.charCode == 46 || event.keyCode == 8 || event.keyCode == 46)'
                                               ng-model-options="{ updateOn: 'blur' }">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                    @*<input type="date" class="form-control datepicker datemask" style="height: 33px;" placeholder="dd/mm/yyyy" ng-model="survey.FollowUpDate" />*@
                                </div>
                                <div class="form-group">
                                    <label>Reason</label>
                                    <textarea class="form-control" rows="3" ng-model="survey.Reason" placeholder="Max. 300 Characters" />
                                </div>
                            </div>
                        </div>
                        <div class="box-footer" style="margin-top:1%">
                            <button type="submit" value="Save" data-ng-click="UpdateSurvey()" class="btn btn-success button-size-small glyphicon"><span class="glyphicon glyphicon-floppy-disk"></span>Save</button>
                            <a href="/#/SurveyComnucation" type="button" class="btn btn-warning button-size-small"><span class="glyphicon glyphicon-hand-left"></span>Back</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

